{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "./",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "esnext",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "paths": {
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"],
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
